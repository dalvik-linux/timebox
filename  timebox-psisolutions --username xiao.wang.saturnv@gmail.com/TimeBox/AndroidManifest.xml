<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
      package="nz.wgtn.psisolutions.timebox"
      android:versionName="1.0.16" android:versionCode="10016">
    <uses-sdk android:minSdkVersion="7" />
    <uses-permission android:name="android.permission.VIBRATE"></uses-permission>
    <uses-permission android:name="android.permission.WAKE_LOCK"></uses-permission>
    <uses-permission android:name="android.permission.INTERNET"></uses-permission>
<application android:icon="@drawable/timebox_icon" android:label="@string/app_name">
        <activity android:name=".presets.gui.PresetListActivity" android:label="@string/app_name" android:screenOrientation="portrait">
        	<intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
         <activity android:name=".timer.gui.TimerActivity" android:label="@string/timer" android:screenOrientation="portrait" android:theme="@android:style/Theme.NoTitleBar.Fullscreen">
        
        </activity>
         <activity android:name=".presets.gui.EditPresetActivity" android:screenOrientation="portrait" android:windowSoftInputMode="stateHidden"></activity>
         <service android:name=".timer.backend.PomodoroService"></service>
         <activity android:name=".preferences.PreferencesActivity"></activity>
    </application>
</manifest>